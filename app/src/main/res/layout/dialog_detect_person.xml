<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detect_dialog_bg">

    <View
        android:id="@+id/dialog_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/detect_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/dialog_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/detect_dialog_bg"
        android:gravity="center"
        android:text="@string/liveness_back"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/dialog_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/detect_dialog_bg"
        android:gravity="center"
        android:text="@string/liveness_once_more"
        android:textColor="#666666"
        android:textSize="14sp" />
</RelativeLayout>